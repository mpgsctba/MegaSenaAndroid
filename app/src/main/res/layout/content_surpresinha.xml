<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.loterias.caixa.megasena.Acitivity.SurpresinhaActivity"
    tools:showIn="@layout/activity_surpresinha">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.65" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Escolha a quantidade entre 6 à 15 numeros."
                android:layout_marginLeft="10dp"
                android:id="@+id/lblConteudoTelaGerarSorteios"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="20dp"
                android:text="6"
                android:id="@+id/lblQuantidade"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="6"
                    android:layout_marginLeft="50dp"
                    android:textAlignment="center"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_vertical" />

                <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar"
                    android:max="9"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.56" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="15"
                    android:layout_marginRight="50dp"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gerar Números"
                android:theme="@style/AppTheme.Button"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:id="@+id/buttonGerarNumeros"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Números da sorte."
                android:layout_marginLeft="10dp"
                android:id="@+id/lblNumerosSorte"
                android:visibility="invisible"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/linear_01"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal">
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:id="@+id/linear_02"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal">
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:id="@+id/linear_03"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal">
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANALISAR NÚMEROS"
                android:theme="@style/AppTheme.Button"
                android:visibility="invisible"
                android:layout_marginTop="1dp"
                android:id="@+id/buttonAnalisar"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
