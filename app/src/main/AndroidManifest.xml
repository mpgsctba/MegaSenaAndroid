<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loterias.caixa.megasena">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Acitivity.SplashActivity"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Acitivity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|orientation"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Acitivity.RankingActivity"
            android:label="@string/title_activity_ranking"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|orientation"
            android:parentActivityName=".Acitivity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Acitivity.MainActivity" />
        </activity>
        <activity
            android:name=".Acitivity.PesquisarActivity"
            android:label="@string/title_activity_pesquisar"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|orientation"
            android:parentActivityName=".Acitivity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loterias.caixa.megasena.Acitivity.MainActivity" />
        </activity>
        <activity
            android:name=".Acitivity.DetalheActivity"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_detalhe"
            android:parentActivityName=".Acitivity.PesquisarActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loterias.caixa.megasena.Acitivity.PesquisarActivity" />
        </activity>
        <activity
            android:name=".Acitivity.SurpresinhaActivity"
            android:label="@string/title_activity_surpresinha"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|orientation"
            android:parentActivityName=".Acitivity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loterias.caixa.megasena.Acitivity.MainActivity" />
        </activity>
        <activity
            android:name=".Acitivity.EscolherNumerosActivity"
            android:label="@string/title_activity_escolher_numeros"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|orientation"
            android:parentActivityName=".Acitivity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loterias.caixa.megasena.Acitivity.MainActivity" />
        </activity>
        <activity
            android:name=".Acitivity.EstatisticasActivity"
            android:label="@string/title_activity_estatisticas"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|orientation"
            android:parentActivityName=".Acitivity.SurpresinhaActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loterias.caixa.megasena.Acitivity.SurpresinhaActivity" />
        </activity>
    </application>

</manifest>